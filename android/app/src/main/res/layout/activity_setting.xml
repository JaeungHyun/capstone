<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/AccessiblityOptTitle"
        style="@style/OptionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/accessibility" />

    <LinearLayout
        android:id="@+id/AutoUpdateTermLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/AutoUpdateTermView"
            style="@style/OptionSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/autoUpdate"
            android:textAlignment="textStart" />

        <SeekBar
            android:id="@+id/AutoUpdateTermSeekBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/AutoUpdateTermValue"
            style="@style/OptionTooltip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="0"
            android:textAlignment="viewEnd" />

        <TextView
            android:id="@+id/AutoUpdateTermUnit"
            style="@style/OptionTooltip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/second"
            android:textAlignment="viewStart" />
    </LinearLayout>

    <TextView
        android:id="@+id/NetworkOptTitle"
        style="@style/OptionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/accessibility"
        tools:text="@string/connection" />

    <LinearLayout
        android:id="@+id/IpLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/IpTermView"
            style="@style/OptionSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ip"
            android:textAlignment="textStart" />

        <EditText
            android:id="@+id/IpInput"
            style="@style/OptionTooltip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/portLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/PortTooltip"
            style="@style/OptionSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/port"
            android:textAlignment="textStart" />

        <EditText
            android:id="@+id/PortInput"
            style="@style/OptionTooltip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textAlignment="textEnd" />
    </LinearLayout>


</LinearLayout>