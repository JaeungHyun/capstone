<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Card">
        <item name="android:elevation">20dp</item>
        <item name="android:background">@color/cardBackground</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">1dp</item>
    </style>
    <style name="Background">
        <item name="android:background">@color/background</item>
        <item name="android:padding">1dp</item>
    </style>
    <style name="Title">
        <item name="android:textSize">33sp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>
    <style name="TitleText">
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">50pt</item>
    </style>
    <style name="DefaultText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="ConfirmedText" parent="DefaultText">
        <item name="android:textColor">@color/confirmed</item>
    </style>
    <style name="RejectedText" parent="DefaultText">
        <item name="android:textColor">@color/rejected</item>
    </style>
    <style name="DefaultButton">
        <item name="android:layout_margin">1dp</item>
    </style>
    <style name="DefaultEditText" parent="DefaultText">
        <item name="android:imeOptions">actionDone</item>
    </style>
    <style name="WaterGraphBackground">
        <item name="android:background">@color/graphBack</item>
    </style>
    <style name="WaterGraphForeground">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="OptionTitle" parent="DefaultText">
        <item name="android:background">@drawable/border</item>
    </style>
    <style name="OptionTooltip" parent="DefaultText">
        <item name="android:layout_margin">4dp</item>
    </style>
    <style name="OptionSubTitle" parent="OptionTooltip">
        <item name="android:paddingStart">16dp</item>
    </style>
</resources>
